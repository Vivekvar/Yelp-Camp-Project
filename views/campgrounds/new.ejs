<% layout('/layouts/boilerplate') %> 
<!-- This whole content will be passes to boilerplate file as body. -->
<h1>Add a new Campground</h1>
<form action="/campgrounds" method="POST">
    <div>
        <label for="title">Title</label>
        <!-- Title will be available using req.body.campground.title -->
        <input type="text" id="title" name="campground[title]">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="campground[location]">
    </div>
    <button>Add Campground</button>
</form>
<a href="/campgrounds">All Campgrounds</a>